@{ Layout = "_LayoutUser"; }
@model VDCompanyMVC.Models.DTO.ContactsDTO
<div class="contact-wrapper" style="top: 160px;">
    <div class="contact-sidebar">
        <div class="contact-sidebar-body ps ps--active-y">
            <div class="tab-content">
                <div id="tabContact" class="tab-pane fade active show">
                    <div class="pd-y-20 pd-x-10 contact-list">
                        <label id="contactA" class="contact-list-divider">Все юристы VDCompany</label>

                    @for (int i = 0; Model.Lawyers.Count != 0 && i < Model.Lawyers.Count; i++)
                    {
                        <div class="media active">
                            <div class="avatar avatar-sm avatar-online">
                                <span class="avatar-initial rounded-circle bg-gray-700"></span>
                            </div>
                            <div class="media-body mg-l-10">
                                <h6 class="tx-13 mg-b-3">@Model.Lawyers[i].Email</h6>
                                <span class="tx-12">@Model.Lawyers[i].Phone</span>
                            </div><!-- media-body -->
                        </div><!-- media -->
                    }
                    </div><!-- contact-list -->
                </div><!-- tab-pane -->

            </div><!-- tab-content -->
            <div class="ps__rail-x" style="left: 0px; top: 0px;">
                <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
            </div>
            <div class="ps__rail-y" style="top: 0px; height: 833px; right: 0px;">
                <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 805px;"></div>
            </div>
        </div><!-- contact-sidebar-body -->
    </div><!-- contact-sidebar -->

    <div class="contact-content">
        <div class="contact-content-header">
            <nav class="nav">
                <a href="#contactInformation" class="nav-link active" data-toggle="tab">
                    Основные контакты
                    VDCompany<span></span>
                </a>
            </nav>
            <a href="" id="contactOptions" class="text-secondary mg-l-auto d-xl-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="feather feather-more-horizontal">
                    <circle cx="12" cy="12" r="1"></circle>
                    <circle cx="19" cy="12" r="1"></circle>
                    <circle cx="5" cy="12" r="1"></circle>
                </svg>
            </a>
        </div><!-- contact-content-header -->

        <div class="contact-content-body ps">
            <div class="tab-content">

                <div id="contactInformation" class="tab-pane show pd-20 pd-xl-25 active">
                    <div class="row">
                        <div class="col-6 col-sm">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">Ген. Директор [Имя]</label>
                            <p class="mg-b-0">@Model.ServiceVD.Name</p>
                        </div><!-- col -->
                        <div class="col-6 col-sm">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">Ген. Директор [Фамилия]</label>
                            <p class="mg-b-0">@Model.ServiceVD.Familio</p>
                        </div><!-- col -->
                        <div class="col-sm mg-t-20 mg-sm-t-0">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">Ген. Директор [Отчество]</label>
                            <p class="mg-b-0">@Model.ServiceVD.Otch</p>
                        </div><!-- col -->
                    </div><!-- row -->

                    <h6 class="mg-t-40 mg-b-20">Контактная информация сервиса VDCompany</h6>

                    <div class="row row-sm">
                        <div class="col-6 col-sm-4">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                                Телефонный номер
                            </label>
                            <p class="tx-primary tx-rubik mg-b-0">@Model.ServiceVD.PhoneAdmin</p>
                        </div>
                        <div class="col-6 col-sm-4">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                                Телефонный номер поддержки
                            </label>
                            <p class="tx-primary tx-rubik mg-b-0">@Model.ServiceVD.PhoneSupport</p>
                        </div>
                        <div class="col-6 col-sm-4 mg-t-20 mg-sm-t-0">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                              Почта поддержки
                            </label>
                            <p class="tx-primary tx-rubik mg-b-0">@Model.ServiceVD.EmailSupport</p>
                        </div>
                        <div class="col-sm-4 mg-t-20 mg-sm-t-30">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                                Почта директора 
                            </label>
                            <p class="tx-primary mg-b-0">@Model.ServiceVD.EmailAdmin</p>
                        </div>
                        <div class="col-sm-4 mg-t-20 mg-sm-t-30">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">Название компании</label>
                            <p class="mg-b-0">VDCompany (Бюро юристов)</p>
                        </div>
                       
                        <div class="col-sm-6 mg-t-20 mg-sm-t-30">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                               Фактический адрес 
                            </label>
                            <p class="mg-b-0">@Model.ServiceVD.Address</p>
                        </div>
                        <div class="col-sm-6 mg-t-20 mg-sm-t-30">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                                Фактический адрес поддержки
                            </label>
                            <p class="mg-b-0">@Model.ServiceVD.AddressSupport</p>
                        </div>
                        <div class="col-sm-6 mg-t-20 mg-sm-t-30">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                                Официальный веб-сайт
                            </label>
                            <p class="tx-primary mg-b-0">@Model.ServiceVD.Site</p>
                        </div>
                        <div class="col-sm-6 mg-t-20 mg-sm-t-30">
                            <label class="tx-10 tx-medium tx-spacing-1 tx-color-03 tx-uppercase tx-sans mg-b-10">
                                Социальные сети (FACEBOOK/VK/ОДНОКЛАССНИКИ)
                            </label>
                            <nav class="nav nav-social">
                                <a href="@Model.ServiceVD.LinkFace" class="nav-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                         height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-facebook">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z">
                                        </path>
                                    </svg>
                                </a>
                                <a href="@Model.ServiceVD.LinkVK" class="nav-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                         height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-twitter">
                                        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z">
                                        </path>
                                    </svg>
                                </a>
                                <a href="@Model.ServiceVD.LinkOK" class="nav-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                         height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-instagram">
                                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                                        <line x1="17.5" y1="6.5" x2="17.5" y2="6.5"></line>
                                    </svg>
                                </a>
                            </nav>
                        </div><!-- col -->
                    </div><!-- row -->
                </div>
                <div id="contactLogs" class="tab-pane pd-20 pd-xl-25">
                    <div class="d-flex align-items-center justify-content-between mg-b-30">
                        <h6 class="tx-15 mg-b-0">Call &amp; Message Logs</h6>
                        <a href="#" class="btn btn-sm btn-white d-flex align-items-center">
                            <i class="icon ion-md-time mg-r-5 tx-16 lh--9"></i> Clear History
                        </a>
                    </div>
                </div><!-- tab-pane -->
            </div><!-- tab-content -->
            <div class="ps__rail-x" style="left: 0px; top: 0px;">
                <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
            </div>
            <div class="ps__rail-y" style="top: 0px; right: 0px;">
                <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
            </div>
        </div><!-- contact-content-body -->

        <div class="contact-content-sidebar ps">
            <div class="clearfix mg-b-25">
                <div id="contactAvatar" class="pos-relative float-left">
                    <div class="avatar avatar-xl">
                        <span class="avatar-initial rounded-circle bg-gray-700 tx-normal">В.Д</span>
                    </div>
                    <a href="" class="contact-edit-photo" data-toggle="tooltip" title=""
                       data-original-title="Upload Photo">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24"
                             height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2">
                            <polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon>
                        </svg>
                    </a>
                </div>
            </div>
            <h5 id="contactName" class="tx-18 tx-xl-20 mg-b-5">Вадим Давыдов</h5>
            <p class="tx-13 tx-lg-12 tx-xl-13 tx-color-03 mg-b-20">Генеральный директор VDCompany</p>
            <nav class="contact-call-nav mg-b-20">
                @*<a href="#" class="nav-call" data-toggle="tooltip" title=""
                   data-original-title="Make a Phone Call">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24"
                         height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z">
                        </path>
                    </svg>
                </a>
                <a href="#" class="nav-video" data-toggle="tooltip" title=""
                   data-original-title="Make a Video Call">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24"
                         height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round" class="feather feather-video">
                        <polygon points="23 7 16 12 23 17 23 7"></polygon>
                        <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                    </svg>
                </a>
                <a href="#" class="nav-msg" data-toggle="tooltip" title="" data-original-title="Send Message">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="feather feather-message-square">
