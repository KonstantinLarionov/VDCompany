@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="space/assets/img/favicon.png">

    <title>Вход в личный кабинет VDCompany</title>

    <!-- vendor css -->
    <link href="~/spacehome/space/lib/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/spacehome/space/lib/ionicons/css/ionicons.min.css" rel="stylesheet">

    <!-- DashForge CSS -->
    <link rel="stylesheet" href="~/spacehome/space/assets/css/dashforge.css">
    <link rel="stylesheet" href="~/spacehome/space/assets/css/dashforge.auth.css">
</head>

<body style="background-color: rgb(28, 28, 28);">

    <header class="navbar navbar-header navbar-header-fixed" style="background-color: rgb(28, 28, 28);">
        <a href="#" id="mainMenuOpen" class="burger-menu"><i data-feather="menu"></i></a>
        <div class="navbar-brand">
            <a href="../../index.html" class="df-logo" style="color: whitesmoke;">VD <span>Company</span></a>
        </div><!-- navbar-brand -->
        <div id="navbarMenu" class="navbar-menu-wrapper">
            <div class="navbar-menu-header">
                <a href="../../index.html" class="df-logo">VD<span>Company</span></a>
                <a id="mainMenuClose" href=""><i data-feather="x"></i></a>
            </div><!-- navbar-menu-header -->
            <ul class="nav navbar-menu">
            </ul>
        </div><!-- navbar-menu-wrapper -->
        <div class="navbar-right">
            <a href="http://dribbble.com/themepixels" class="btn btn-social"><i class="fab fa-dribbble"></i></a>
            <a href="https://github.com/themepixels" class="btn btn-social"><i class="fab fa-github"></i></a>
            <a href="https://twitter.com/themepixels" class="btn btn-social"><i class="fab fa-twitter"></i></a>
            <a href="/User/Reg"
               class="btn btn-buy"><span>Регистрация</span></a>
        </div><!-- navbar-right -->
    </header><!-- navbar -->

    <div class="content content-fixed content-auth">
        <div class="container">
            <div class="media align-items-stretch justify-content-center ht-100p pos-relative">
                <div class="media-body align-items-center d-none d-lg-flex">
                    <div class="mx-wd-600">
                        <img src="~/spacehome/assets/images/logo.png" class="img-fluid" width="500" height="600" alt="">
                    </div>

                </div><!-- media-body -->
                <div class="sign-wrapper mg-lg-l-50 mg-xl-l-60">
                    <div class="wd-100p">
                        <h3 class="tx-color-01 mg-b-5" style="color: whitesmoke;">Вход в личный кабинет</h3>
                        <p class="tx-color-03 tx-16 mg-b-40">Добро пожаловать! Введите ваши данные.</p>
                        <form action="/User/Login" method="post">
                            <div class="form-group">
                                <label style="color: whitesmoke;">Логин/Почта</label>
                                <input type="text" name="email" id="email" class="form-control" placeholder="yourname@yourmail.com">
                            </div>
                            <div class="form-group">
                                <div class="d-flex justify-content-between mg-b-5">
                                    <label class="mg-b-0-f" style="color: whitesmoke;">Пароль</label>
                                </div>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password">
                            </div>
                            <button class="btn btn-brand-02 btn-block">Войти</button>
                        </form>

                        <!--<div class="divider-text">ИЛИ</div>-->
                        <!--<button class="btn btn-outline-facebook btn-block">Войти с Facebook</button>
    <button class="btn btn-outline-twitter btn-block">Войти с VK</button>-->
                        <div class="tx-13 mg-t-20 tx-center" style="color: whitesmoke;">
                            У вас нет аккаунта? <a href="/User/Reg">Создать аккаунт</a>
                        </div>
                    </div>
                </div><!-- sign-wrapper -->
            </div><!-- media -->
        </div><!-- container -->
    </div><!-- content -->

    <script src="~/spacehome/space/lib/jquery/jquery.min.js"></script>
    <script src="~/spacehome/space/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/spacehome/space/lib/feather-icons/feather.min.js"></script>
    <script src="~/spacehome/space/lib/perfect-scrollbar/perfect-scrollbar.min.js"></script>

    <script src="~/spacehome/assets/js/dashforge.js"></script>

    <!-- append theme customizer -->
    <script src="~/spacehome/space/lib/js-cookie/js.cookie.js"></script>
    <script src="~/spacehome/assets/js/dashforge.settings.js"></script>
    <script>
        function GoLog() {
            var email = document.getElementById("email");
            var pass = document.getElementById("password");
            fetch('/Auth/Login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json;charset=utf-8'
                },
                body: JSON.stringify({ Login: email.value, Password: pass.value })
            }).then(response => response.text())
                .then(result => alert(result));
        }
    </script>
</body>

</html>
