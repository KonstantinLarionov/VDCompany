                                                <button type="button" class="btn btn-sm btn-primary m-1">Посмотреть</button>
                                                <a href="#modal_case_@Model.Cases[i].Id" data-toggle="modal" data-animation="effect-flip-horizontal" type="button" class="btn btn-sm btn-info m-1">Назначить</a>
                                            </div>
                                        </Td>
                                    </tr>
                                }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
