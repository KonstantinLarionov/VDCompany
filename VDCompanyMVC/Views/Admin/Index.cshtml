                                        <td style="vertical-align:middle;">@Model.Cases[i].Name</td>
                                        <td style="vertical-align:middle;">@Model.Cases[i].Type</td>
                                        <td style="vertical-align:middle;">@Model.Cases[i].DateStart</td>
                                        <td style="vertical-align:middle;">@if (Model.Cases[i].Lawyers.Count != 0) { @Model.Cases[i].Lawyers[0].Login; }</td>
                                        <td style="vertical-align:middle;">
                                            @switch (@Model.Cases[i].Status)
                                            {
                                                case VDCompanyMVC.Models.Objects.TypeCase.Close:
                                                    var str = "Закрыто";
                                                    @str;
                                                    break;
                                                case VDCompanyMVC.Models.Objects.TypeCase.Open:
                                                    var str2 = "Открыто";
                                                    @str2;
                                                    break;
                                                case VDCompanyMVC.Models.Objects.TypeCase.InProcess:
                                                    var str3 = "В процессе";
                                                    @str3;
                                                    break;
                                                default:
                                                    break;
                                            }
                                        </td>
